@model IEnumerable<src.Models.Appointment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Appointments</h2>
<div id="calendar"></div>
<div style="display: none">

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table id="appointments" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Doctor.Speciality)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient.Gender)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="Appointment">
                    <td class="title">
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="start">
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Doctor.Speciality)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient.Gender)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
{
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/fullcalendar.min.js"></script>
    <link href="~/Content/fullcalendar.css" rel="stylesheet" />
    <script type="text/javascript">
        $(document).ready(function () {
            var events = [];
            $(".appointment").each(function () {
                var title = $(".title", this).text().trim();
                var start = $(".start", this).text().trim();
                var start1 = moment(start).format();
                var event = {
                    "title": title,
                    "start": start1
                };
                events.push(event);
            });

            $("#calendar").fullCalendar({
                locale: 'au',
                events: events,
                dayClick: function (date, allDay, jsEvent, view) {
                    var d = new Date(date);
                    var m = moment(d).format("YYYY-MM-DD");
                    m = encodeURIComponent(m);
                    var uri = "/Appointments/Create?date=" + m;
                    $(location).attr('href', uri);
                },
                eventClick: function (calEvent, jsEvent, view) {
                    alert("Meeting Name: " + calEvent.title);

                }
            });

            $('#meetingTable').DataTable({
                "pagingType": "full_numbers",
                "order": [[1, "asc"]]
            });
        });
    </script>
}