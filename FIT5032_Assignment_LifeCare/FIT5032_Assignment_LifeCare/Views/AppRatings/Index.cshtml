@model IEnumerable<src.Models.AppRating>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData != null)
{
    @Html.Raw(TempData["msg"])
}

<table id="RatingTable" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StarNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StarNo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @*|
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
        }
    </tbody>
    <tfoot style="font-weight:bold">
        <tr>
            <td>Average Rating</td>
            <td></td>
            @if (Model.Any())
            {
                <td>@Model.Average(i => i.StarNo).ToString("0.00")</td>
            }
            else
            {
                <td>No Ratings</td>

            }
        </tr>
    </tfoot>

</table>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#RatingTable').DataTable({
                "pagingType": "full_numbers"
            });
        });
    </script>
}
